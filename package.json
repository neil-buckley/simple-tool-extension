{
	"name": "simple-tool",
	"displayName": "simple-tool",
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/neil-buckley/simple-tool-extension.git"
	},
	"description": "Navigate a simple application",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.66.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:simple-tool.simpleToolView",
		"onCommand:simple-tool.simpleTool"
	],
	"main": "./extension.js",
	"contributes": {
		"viewsContainers": {
			"panel": [{
				"id": "simple-tool",
				"title": "Simple Tool",
				"icon": "resources/package-explorer.svg"
			}]
		},
		"views": {
			"simple-tool": [{
				"type": "webview",
				"id": "simple-tool.simpleToolView",
				"name": "Navigator"
			}]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.66.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.3"
	}

}
